{
  "theme": "tokyo-night",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "showBasename": true },
          "model": { "enabled": true },
          "context": { "enabled": true, "showPercentageOnly": true },
          "session": {
            "enabled": true,
            "type": "tokens"
          },
          "block": {
            "enabled": true,
            "type": "weighted",
            "burnType": "tokens"
          },
          "metrics": {
            "enabled": true,
            "showResponseTime": true,
            "showLastResponseTime": true,
            "showDuration": true,
            "showMessageCount": true,
            "showLinesAdded": true,
            "showLinesRemoved": true
          },
          "version": { "enabled": true }
        }
      },
      {
        "segments": {
          "git": {
            "enabled": true,
            "showSha": false,
            "showWorkingTree": true,
            "showOperation": true,
            "showTag": false,
            "showTimeSinceCommit": true,
            "showStashCount": true,
            "showUpstream": true,
            "showRepoName": true
          }
        }
      }
    ]
  }
}
